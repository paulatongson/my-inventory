<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script> 
    <link rel="stylesheet" href="/css/admin.css"> 
    <title>Admin</title>
  </head>
  <body>
    {{>adminHeader}}
    {{>adminProduct}}
    {{>logout}}
    <div class="container">

        <form action="/admin/editDeleteProducts/{{updateProduct.ProductID}}" method="post" enctype="multipart/form-data">
          <input
            type="text"
            name="Name"
            id="Name"
            placeholder="ex. 8B Stabilo Pencil"
            value="{{updateProduct.Name}}"
            required
            class="form-control my-3"
          />

          <input
            type="text"
            name="Description"
            id="Description"
            placeholder="ex. Darkest pencil good for shading"
            value="{{updateProduct.Description}}"
            required
            class="form-control my-3"
          />

          <select name="CategoryID" id=""
          class="form-control my-3"> 
          {{#each categories}}
            {{#compare ../updateProduct.CategoryID "===" this.id}}
              <option value="{{this.id}}" selected>{{this.name}}</option>
            {{else}}
              <option value="{{this.id}}">{{this.name}}</option>
            {{/compare}}
          {{/each}}
          </select> 

          <input
            type="number"
            name="Price"
            id="Price"
            placeholder="ex. 500"
            value="{{updateProduct.Price}}"
            required
            class="form-control my-3"
          />

          <input
            type="number"
            name="Quantity"
            id="Quantity"
            placeholder="ex. 10"
            value="{{updateProduct.Quantity}}"
            required
            class="form-control my-3"
          />
          <input type="file" name="avatar" accept="image/png, image/jpeg" 
          class="form-control my-3"/>
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
    </div>

  </body>
</html>